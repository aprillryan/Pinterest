<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Pins</h1>
    </div>
  </div>

<div class="panel-body">
  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Description</th>
        <th>User</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td><%= image_tag pin.image.url(:medium) %></td>
          <td><%= pin.description %> <br></td>
          <td><%= pin.user.email if pin.user %> <br></td>
          <td><%= link_to 'View', pin %> &nbsp </td>
          <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin) %> &nbsp </td>
          <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="panel-footer">
      <%= link_to 'New Pin', new_pin_path %> 
</div>